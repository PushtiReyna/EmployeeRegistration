@model IEnumerable<EmployeeRegistration.Models.Employee>


<h1>Information</h1>
<div class="containr">
    <div class="row">
    <div class="col-12">
        <h1 class="text-center">List Of Employee</h1>
        <a  class=" btn btn-outline-success m-1" asp-action="Create">New Entry</a>

        <table class="table">
            <tr class="text-center">
                <th>Id</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Dob</th>
                <th>Mobile1</th>
                <th>Mobile2</th>
                <th>PinCode</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr class="Text-center">
                        <td>@item.EmployeeId</td>
                        <td>@item.FirstName</td>
                        <td>@item.MiddleName</td>
                        <td>@item.LastName</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>
                        <td>@item.Dob</td>
                        <td>@item.Mobile1</td>
                        <td>@item.Mobile2</td>
                        <td>@item.PinCode</td>
                        <td>@item.Gender</td>
                        <td>
                                <a class=" btn btn-warning m-1" asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a>
                                <a class=" btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
                        </td>
                </tr>
            }
        </table>
    </div>
    </div>
</div>

