@model EmployeeRegistration.Models.Employee

<h1 class="text-center">Delete Data</h1>
<div class="row">
    <div class=" col-4 offset-4">
        <form asp-action="Delete" method="post">

            <div class="mb-3">
                <label class=" form-label" hidden>Employee Id</label>
                <input type="text" class=" form-control" asp-for=EmployeeId readonly hidden />
            </div>

            <div class="mb-3">
                <label class=" form-label">First Name</label>
                <input type="text" class=" form-control" asp-for=FirstName readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Middle Name</label>
                <input type="text" class=" form-control" asp-for=MiddleName readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Last Name</label>
                <input type="text" class=" form-control" asp-for=LastName readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Address</label>
                <textarea rows="3" cols="15" class=" form-control" asp-for=Address readonly></textarea>
            </div>

            <div class="mb-3">
                <label class=" form-label">Email</label>
                <input type="email" class=" form-control" asp-for=Email readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Date Of Birth</label>
                <input type="date" class=" form-control" asp-for=Dob readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Mobile No.</label>
                <input type="number" class=" form-control" asp-for=Mobile1 readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Alternate Mobile No.</label>
                <input type="text" class=" form-control" asp-for=Mobile2 readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">PinCode</label>
                <input type="number" class=" form-control" asp-for=PinCode readonly />
            </div>

            <div class="mb-3">
                <label class=" form-label">Gender</label>
                <br/>
                <label>Male</label>
                <input type="radio" asp-for=Gender value="Male" />
                <label>Female</label>
                <input type="radio" asp-for=Gender value="Female" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a class="btn btn-danger m-1 text-white" asp-action="Index">Cancel</a>
            </div>

        </form>

    </div>

</div>
